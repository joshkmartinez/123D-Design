<?xml version="1.0" ?>
<!DOCTYPE adsui SYSTEM "../../ui.dtd">
<adsui version="2.0">
  <PageInfo>
    <Title>
      Mirror
    </Title>
  </PageInfo>
  <Fields>
    <StackPanel id="asset_information" 
                label="Information" 
                orientation="Vertical" 
                expanded="false">
      <AssetName id="asset_name"
                 label="Name"/>
      <AssetDescription id="asset_description"
                        label="Description"/>
      <AssetKeywords id="asset_keywords"
                     label="Keywords"/>
      <AssetType id="asset_type"
                 label="Type"/>
      <AssetSource id="asset_source"
                   label="Source"/>
      <AssetVersion id="asset_version"
                    label="Version"/>
      <AssetTexturePaths id="asset_texture_paths"
                         label="Texture Paths"/>
    </StackPanel>

    <StackPanel id="mirror_mirrorgroup"
                label="Mirror"
                orientation="Vertical"
                expanded="true">
      <MappableColorByObject id="mirror_tintcolor"
             label="Tint Color"
             coloronly="true"
             tooltip="Adjusts the color of the mirror, which represents the total absorption of the float glass. The tint should always take into account the fact that the float glass layer has a certain level of absorption.">
        <BoolColorByObject id="mirror_color_by_object" />
      </MappableColorByObject>
    </StackPanel>

    <StackPanel id="common_Tint_toggle" 
                label="Tint" 
                orientation="Vertical" 
                checkbox="true"
                expanded="false">
      <Color id="common_Tint_color"
             label="Tint Color" />
      
    </StackPanel>
    
  </Fields>
</adsui>
